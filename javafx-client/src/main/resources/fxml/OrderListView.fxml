<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox xmlns:fx="http://javafx.com/fxml" fx:controller="com.sep3.client.view.OrderListViewController" spacing="15" styleClass="list-view">
    
    <!-- Header -->
    <HBox alignment="CENTER_LEFT" spacing="10">
        <Label text="Orders" styleClass="view-title"/>
        <Region HBox.hgrow="ALWAYS"/>
        <Label text="Status:"/>
        <ComboBox fx:id="statusFilter" prefWidth="180"/>
        <Button fx:id="refreshButton" text="ðŸ”„ Refresh" onAction="#handleRefresh" styleClass="secondary-button"/>
    </HBox>
    
    <!-- Error/Loading -->
    <HBox alignment="CENTER" spacing="10">
        <ProgressIndicator fx:id="loadingIndicator" visible="false" maxHeight="30" maxWidth="30"/>
        <Label fx:id="errorLabel" styleClass="error-label"/>
    </HBox>
    
    <!-- Table -->
    <TableView fx:id="orderTable" VBox.vgrow="ALWAYS" styleClass="data-table">
        <columns>
            <TableColumn fx:id="orderNumberColumn" text="Order #" prefWidth="180"/>
            <TableColumn fx:id="customerColumn" text="Customer" prefWidth="180"/>
            <TableColumn fx:id="statusColumn" text="Status" prefWidth="150"/>
            <TableColumn fx:id="totalColumn" text="Total" prefWidth="100"/>
            <TableColumn fx:id="itemsColumn" text="Items" prefWidth="60"/>
            <TableColumn fx:id="createdColumn" text="Created" prefWidth="180"/>
        </columns>
        <placeholder>
            <Label text="No orders found"/>
        </placeholder>
    </TableView>
    
    <!-- Pagination -->
    <HBox alignment="CENTER" spacing="10">
        <Button fx:id="prevButton" text="â—€ Previous" onAction="#handlePrevPage" styleClass="secondary-button"/>
        <Label fx:id="pageInfoLabel" text="Page 1 of 1"/>
        <Button fx:id="nextButton" text="Next â–¶" onAction="#handleNextPage" styleClass="secondary-button"/>
    </HBox>
</VBox>
