<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox xmlns:fx="http://javafx.com/fxml" spacing="15" styleClass="list-view">
    
    <!-- Header -->
    <HBox alignment="CENTER_LEFT" spacing="10">
        <Label text="Products" styleClass="view-title"/>
        <Region HBox.hgrow="ALWAYS"/>
        <TextField fx:id="searchField" promptText="Search products..." prefWidth="250"/>
        <Button fx:id="searchButton" text="ðŸ” Search" onAction="#handleSearch" styleClass="secondary-button"/>
        <Button fx:id="refreshButton" text="ðŸ”„ Refresh" onAction="#handleRefresh" styleClass="secondary-button"/>
        <Button fx:id="addButton" text="âž• Add Product" onAction="#handleAdd" styleClass="primary-button"/>
    </HBox>
    
    <!-- Error/Loading -->
    <HBox alignment="CENTER" spacing="10">
        <ProgressIndicator fx:id="loadingIndicator" visible="false" maxHeight="30" maxWidth="30"/>
        <Label fx:id="errorLabel" styleClass="error-label"/>
    </HBox>
    
    <!-- Table -->
    <TableView fx:id="productTable" VBox.vgrow="ALWAYS" styleClass="data-table">
        <columns>
            <TableColumn fx:id="skuColumn" text="SKU" prefWidth="100"/>
            <TableColumn fx:id="nameColumn" text="Name" prefWidth="250"/>
            <TableColumn fx:id="categoryColumn" text="Category" prefWidth="150"/>
            <TableColumn fx:id="priceColumn" text="Price" prefWidth="100"/>
            <TableColumn fx:id="stockColumn" text="Stock" prefWidth="80"/>
            <TableColumn fx:id="locationColumn" text="Location" prefWidth="100"/>
        </columns>
        <placeholder>
            <Label text="No products found"/>
        </placeholder>
    </TableView>
    
    <!-- Pagination -->
    <HBox alignment="CENTER" spacing="10">
        <Button fx:id="prevButton" text="â—€ Previous" onAction="#handlePrevPage" styleClass="secondary-button"/>
        <Label fx:id="pageInfoLabel" text="Page 1 of 1"/>
        <Button fx:id="nextButton" text="Next â–¶" onAction="#handleNextPage" styleClass="secondary-button"/>
    </HBox>
</VBox>
